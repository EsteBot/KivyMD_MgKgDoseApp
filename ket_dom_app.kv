MDFloatLayout:
    orientation: 'vertical'

    MDTopAppBar:
        title: "Mg & g for Mg/Kg Calculator"

    MDTabs:
        id: tabs

        # ids for tab 1
        egg_question_text1: egg_question_text1
        egg_answer_text1: egg_answer_text1
        dose_input_t1: dose_input_t1
        end_vol_input: end_vol_input
        end_weight_output: end_weight_output
        mg_weight_1: mg_weight_1
        g_weight_1: g_weight_1
        vol_err_msg: vol_err_msg

        # ids for tab 2
        egg_question_text2: egg_question_text2
        egg_answer_text2: egg_answer_text2
        dose_input_t2: dose_input_t2
        weight_input: weight_input
        end_vol_output: end_vol_output
        mg_weight_2: mg_weight_2
        g_weight_2: g_weight_2
        weight_err_msg: weight_err_msg

####### Main Control Logic for Tab 1 #######

        Tabs:
            id: tab_1
            title: 'Mg/Kg & Volume Input'

            MDLabel:
                text: "Mg & g for Total Volume"
                pos_hint: {'center_x': 0.5,'center_y': 0.95}
                font_size: 70
                size_hint: 0.8, 0.4
                theme_text_color: "Custom"
                text_color: 1, 0, 1
                halign: "center"

            MDLabel:
                text: "SciApp by: Esteban C. Loetz"
                pos_hint: {'center_x': 0.5,'center_y': 0.9}
                font_size: 40
                size_hint: 0.50, 0.20
                theme_text_color: "Custom"
                text_color: 1, 0, 0.5
                halign: "center"

            Button:
                background_normal: 'dosetabs.png'
                border: 0,0,0,0
                size_hint: (0.25,0.12)
                halign: "center"
                pos_hint: {"center_x": 0.5, "center_y":0.79}
                on_press: app.egg_button_on_release1()

            MDLabel:
                id: egg_question_text1
                text: ''
                font_size: 35
                halign: "center"
                pos_hint: {"center_x": 0.2, "center_y":0.79}

            MDLabel:
                id: egg_answer_text1
                text: ''
                font_size: 35
                halign: "center"
                pos_hint: {"center_x": 0.8, "center_y":0.79}

            TextInput:
                id: dose_input_t1
                hint_text: "Enter Dose (Mg/Kg)"
                pos_hint: {'center_x': 0.5,'center_y': 0.66}
                font_size: 60
                size_hint: 0.7, 0.05
                halign: "center"
                theme_text_color: "Custom"
                text_color: 0.23, 0.67, 0.93

            TextInput:
                id: end_vol_input
                hint_text: "Enter Final Volume (mL)"
                pos_hint: {'center_x': 0.5,'center_y': 0.57}
                font_size: 60
                size_hint: 0.7, 0.05
                halign: "center"
                theme_text_color: "Custom"
                text_color: 0.23, 0.67, 0.93

            MDLabel:
                id: end_weight_output
                text: "Dosable Weight (g)"
                pos_hint: {'center_x': 0.5,'center_y': 0.49}
                font_size: 60
                size_hint: 0.8, 0.2
                halign: "center"
                theme_text_color: "Custom"
                text_color: 1, 1, 1, 0.3

            MDLabel:
                id: mg_weight_1
                text: "Drug Weight (Mg)"
                pos_hint: {'center_x': 0.5,'center_y': 0.43}
                font_size: 60
                size_hint: 0.8, 0.2
                halign: "center"
                theme_text_color: "Custom"
                text_color: 1, 1, 1, 0.3
                
            MDLabel:
                id: g_weight_1
                text: "Drug Weight (g)"
                pos_hint: {'center_x': 0.5,'center_y': 0.37}
                font_size: 60
                size_hint: 0.8, 0.2
                halign: "center"
                theme_text_color: "Custom"
                text_color: 1, 1, 1, 0.3
                
            MDLabel:
                id: vol_err_msg
                text: ""
                pos_hint: {'center_x': 0.5,'center_y': 0.43}
                font_size: 50
                size_hint: 0.7, 0.1
                halign: "center"
                theme_text_color: "Custom"
                text_color: 0.08, 0.96, .93

            MDRectangleFlatButton:
                text: "Calculate Weights"
                pos_hint: {'center_x': 0.5,'center_y': 0.26}
                font_size: 60
                size_hint: 0.7, 0.12
                theme_text_color: "Custom"
                text_color: 1, 0, 1
                halign: "center"
                on_press: app.generate_dose_vol()

            MDRectangleFlatButton:
                text: "Reset"
                pos_hint: {'center_x': 0.5,'center_y': 0.14}
                font_size: 40
                size_hint: 0.2, 0.04
                theme_text_color: "Custom"
                text_color: 1, 0, 1
                halign: "center"
                on_press: app.end_vol_reset_func()

